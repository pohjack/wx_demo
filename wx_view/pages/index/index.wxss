.top {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  padding: 0rpx 20rpx 10rpx 20rpx;
}

.top view {
  border-style: solid;
  border-radius: 30rpx;
}

.top image {
  width: 45rpx;
  height: 45rpx;
}

.top .location {
  width: 300rpx;
  border-color: lightgray;
  background-color: grey;
  justify-content: center;
  align-items: center;
  margin-right: 5rpx;
}

.top .search {
  margin-left: 5rpx;
  width: 450rpx;
  border-color: lightgray;
  display: flex;
  flex-direction: row;
}

.classify {
  padding: 0rpx 20rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.classify view {
  width: 22%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin: 20rpx 10rpx 10rpx 10rpx;
}

.classify image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  align-self: center;
}

.slipt {
  width: 100%;
  height: 20rpx;
  background-color: lightgrey;
}
