.top {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  padding: 0rpx 20rpx 10rpx 20rpx;
  font-size: 30rpx;
}

.top view {
  border-style: solid;
  border-radius: 30rpx;
}

.top image {
  width: 45rpx;
  height: 45rpx;
  padding: 0rpx 10rpx 0rpx 10rpx;
}

.top .location {
  width: 300rpx;
  display: flex;
  flex-direction: row;
  border-color: lightgray;
  border-width: 2rpx;
  background-color: grey;
  align-items: center;
  margin-right: 5rpx;
}

.top .search {
  background-color: lightgray;
  margin-left: 5rpx;
  width: 450rpx;
  border-color: lightgray;
  border-width: 2rpx;
  display: flex;
  flex-direction: row;
}

.classify {
  padding: 0rpx 20rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.classify view {
  width: 22%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin: 20rpx 10rpx 10rpx 10rpx;
  font-size: 30rpx;
}

.classify image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  align-self: center;
}

.slipt {
  width: 100%;
  height: 20rpx;
  background-color: lightgrey;
}

.filter {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.filter_header {
  width: 45%;
  border-bottom:2rpx solid black;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-self: center;
}

.filter_header text {
  width: 60%;
  background-color: white;
  font-size: 40rpx;
  position: relative;
  top: 25rpx;
  align-self: center;
}

.filter_item {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  border-top: 2rpx solid lightgray;
  border-bottom: 2rpx solid lightgray;
  padding: 5rpx 5rpx 5rpx 5rpx;
}
.filter_item text {
  width: 25%;
  font-size: 35rpx;
  text-align: center;
  margin: 15rpx 0rpx 15rpx 0rpx;
}
.border_left {
  border-right: 2rpx solid lightgray;
}