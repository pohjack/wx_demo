.mainContanier {
  width: 710rpx;
  margin: 0;
  padding: 0;
  font-size: 30rpx;
}

/*开发阶段，增加边框，便于显示  */

/* view {
  border-style: solid;
}   */

.top {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  padding: 0rpx 20rpx 10rpx 20rpx;
  font-size: 30rpx;
}

.top view {
  border-style: solid;
  border-radius: 30rpx;
}

.top image {
  width: 45rpx;
  height: 45rpx;
  padding: 0rpx 10rpx 0rpx 15rpx;
}

.top .location {
  width: 300rpx;
  display: flex;
  flex-direction: row;
  border-color: lightgray;
  border-width: 2rpx;
  background-color: lightgray;
  align-items: center;
  margin-right: 5rpx;
}

.top .search {
  background-color: lightgray;
  margin-left: 5rpx;
  width: 450rpx;
  border-color: #fffff0;
  border-width: 2rpx;
  display: flex;
  flex-direction: row;
}

.classify {
  padding: 0rpx 20rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.classify .classify_item {
  width: 22%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin: 20rpx 10rpx 10rpx 10rpx;
  font-size: 30rpx;
}

.classify_item view {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  border-radius: 100rpx;
}

.classify image {
  width: 70rpx;
  height: 70rpx;
  align-self: center;
}

.slipt {
  width: 100%;
  height: 20rpx;
  background-color: lightgrey;
}

.filter {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.filter_header {
  width: 45%;
  border-bottom: 2rpx solid black;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-self: center;
}

.filter_header text {
  width: 60%;
  background-color: white;
  font-size: 40rpx;
  position: relative;
  top: 25rpx;
  align-self: center;
}

.filter_item {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  border-top: 2rpx solid lightgray;
  border-bottom: 2rpx solid lightgray;
  padding: 5rpx 5rpx 5rpx 5rpx;
}

.filter_item text {
  width: 25%;
  font-size: 35rpx;
  text-align: center;
  margin: 15rpx 0rpx 15rpx 0rpx;
}

.border_left {
  border-right: 2rpx solid lightgray;
}

/*底部内容区布局*/

.content_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 95%;
  margin-top: 15rpx;
  border-bottom: solid;
  border-width: 2rpx;
  border-color: lightgray;
  padding: 0rpx 5rpx 20rpx 5rpx;
  /* border-style: solid; */
}

/* .content_right view {
   border-style: solid; 
} */

.product_image {
  width: 30%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.product_image image {
  height: 155rpx;
}

.content_right {
  width: 50%;
  height: 100%;
  margin-left: 10rpx;
}

.star {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #8b8989;
  padding: 10rpx 50rpx 0rpx 0rpx;
}

.star image {
  width: 150rpx;
  height: 30rpx;
}

.price {
  display: flex;
  flex-direction: row;
  font-size: 35rpx;
  color: red;
  padding: 10rpx 0rpx 0rpx 0rpx;
}

.shopCart {
  display: flex;
  width: 20%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.shopCart image {
  width: 100rpx;
  height: 100rpx;
  background-color: #ff6a6a;
  border-radius: 100rpx;
}
